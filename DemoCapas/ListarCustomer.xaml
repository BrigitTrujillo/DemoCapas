<Window x:Class="DemoCapas.ListarCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoCapas"
        mc:Ignorable="d"
        Title="ListarCustomer" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgDemo">
            <DataGrid.Columns>
                <DataGridTextColumn Header="customer_id" Width="100" Binding="{Binding customer_id}" />
                <DataGridTextColumn Header="name" Width="50" Binding="{Binding name}" />
                <DataGridTextColumn Header="address" Width="50" Binding="{Binding address}" />
                <DataGridTextColumn Header="phone" Width="50" Binding="{Binding phone}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
