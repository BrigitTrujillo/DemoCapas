<Page x:Class="DemoCapas.ListarCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoCapas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListarCustomer">

    <Grid>
        <ListView x:Name="customerListView" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="780">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding customer_id}" Width="100"/>
                    <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding name}" Width="200"/>
                    <GridViewColumn Header="Dirección" DisplayMemberBinding="{Binding address}" Width="300"/>
                    <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding phone}" Width="180"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
